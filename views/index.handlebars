<div class="container">
    <div class="row">
        <div class="col-sm">
            <p class="btn btn-primary btn-scrape">Scrape a site</p>
        </div>
        <div class="col-sm">
            <p class="btn btn-primary btn-saved-articles">Saved Articles</p>
        </div>
    </div>
    {{#each articles}}
    <div class="row">
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{title}} </h5>
                    <p class="card-text">{{link}}</p>
                    <div class="btn btn-primary btn-save-article" data-url-md5="{{urlMd5}}">Save Article</div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>